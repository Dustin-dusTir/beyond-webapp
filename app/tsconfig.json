{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,

		"paths": { // to fix the vsCode $lib bug
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		}
	}
}
